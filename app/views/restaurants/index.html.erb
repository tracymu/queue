<div class="row">
  <div class="span4">
  	<h1>Top Rated</h1>
  </div>
  <div class = "span8">
    <% if current_user %>
      <h1>...Add a Restaurant... </h1>

      <%= link_to 'Add a Restaurant', new_restaurant_path, :class => 'btn btn-primary' %>
    <% else %>
       <h2><%= link_to 'Sign Up', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %> </h2>
    <% end %>
  </div>
</div>

<div class = "row">
  <div class = "span4">

    <% @restaurants.first(5).each do |restaurant| %>
      <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
      <p><%= restaurant.city %></p>
      <hr>
    <% end %>

    <p><%= link_to 'See all', restaurant_list_path %></p>

  </div>


  <div class="span8">
    <% unless current_user %>
